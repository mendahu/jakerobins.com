---
import PostHeader from "../components/PostHeader.astro";
import Byline from "../components/Byline.astro";
import { storyblokEditable } from "@storyblok/astro";
import RichTextRenderer from "@storyblok/astro/RichTextRenderer.astro";

const { story } = Astro.props;
---

<article {...storyblokEditable(story)} class="[ flow ]">
  <PostHeader
    title={story.name}
    src={story.content.cover.filename}
    credit={story.content.cover.source}
    alt={story.content.cover.alt}
  />
  <Byline publicationDate={story.published_at || story.created_at} />
  <RichTextRenderer richTextData={story.content.content} />
</article>
