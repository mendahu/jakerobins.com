---
declare global {
  interface Window {
    dataLayer: Record<string, any>[];
  }
}

interface Props {
  ga4id: string;
}
---

<script
  async
  src=`https://www.googletagmanager.com/gtag/js?id=${Astro.props.ga4id}`
></script>
<script define:vars={{ ga4id: Astro.props.ga4id }} is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(...args) {
    window.dataLayer.push(...args);
  }
  gtag("js", new Date());

  gtag("config", ga4id);
</script>
