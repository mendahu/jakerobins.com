---
declare global {
  interface Window {
    dataLayer: Record<string, any>[];
  }
}

interface Props {
  ga4id: string;
}

const ga4id = Astro.props.ga4id;
---

<script
  async
  src=`https://www.googletagmanager.com/gtag/js?id=${ga4id}`
  is:inline></script>
<script define:vars={{ ga4id }} is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(...args) {
    dataLayer.push(...args);
  }
  gtag("js", new Date());

  gtag("config", ga4id);
</script>
