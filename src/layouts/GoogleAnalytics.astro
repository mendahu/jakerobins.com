---
declare global {
  interface Window {
    dataLayer: Record<string, any>[];
  }
}

interface Props {
  ga4id: string;
}

const ga4id = Astro.props.ga4id;
---

<script
  type="text/partytown"
  async
  src=`https://www.googletagmanager.com/gtag/js?id=${ga4id}`></script>
<script type="text/partytown" define:vars={{ ga4id }}>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(args);
  }
  gtag("js", new Date());

  gtag("config", ga4id);
</script>
