---
import ResponsiveImage from "./ResponsiveImage.astro";

interface Props {
  src: string;
  alt: string;
  credit: string;
  title: string;
}
---

<header class="[ post-header ] [ full-bleed ]">
  <figure>
    <ResponsiveImage
      src={Astro.props.src}
      alt={Astro.props.alt}
      title={Astro.props.title}
      lazy={false}
      fullBleed={true}
      class="[ hero ]"
    />
    <figcaption class="[ inset-top-right gutter-2xs category-tag invert-text ]">
      {Astro.props.credit}
    </figcaption>
  </figure>
  <h1 class="[ wrapper category-tag invert-text ]">
    <span>{Astro.props.title}</span>
  </h1>
</header>
