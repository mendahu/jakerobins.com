---
import type { HeadConfig } from "./headConfig";

type Props = HeadConfig;
---

<title>{Astro.props.title}</title>
<meta name="description" content={Astro.props.description} />
<meta charset={Astro.props.meta.charset} />
<meta name="viewport" content={Astro.props.meta.viewport} />
<link
  rel="apple-touch-icon"
  sizes={Astro.props.favicon.appleTouch.sizes}
  href={Astro.props.favicon.appleTouch.sizes}
/>
{
  Astro.props.favicon.defaults.map((f) => (
    <link rel="icon" type="image/png" sizes={f.sizes} href={f.href} />
  ))
}
<link rel="manifest" href={Astro.props.favicon.manifest} />
<link
  rel="mask-icon"
  href={Astro.props.favicon.safari.href}
  color={Astro.props.favicon.safari.href}
/>
<meta
  name="msapplication-TileColor"
  content={Astro.props.favicon.msTileColor}
/>
<meta name="theme-color" content={Astro.props.favicon.themeColor} />

<meta name="twitter:card" content={Astro.props.social.twitter.card} />
<meta name="twitter:site" content={Astro.props.social.twitter.site} />
<meta name="twitter:creator" content={Astro.props.social.twitter.creator} />
<meta name="twitter:title" content={Astro.props.social.title} />
<meta name="twitter:description" content={Astro.props.social.description} />
<meta name="twitter:image" content={Astro.props.social.twitter.image} />
<meta name="twitter:image:alt" content={Astro.props.social.twitter.alt} />

<meta property="og:url" content={Astro.props.social.openGraph.url} />
<meta property="og:title" content={Astro.props.social.title} />
<meta property="og:type" content={Astro.props.social.openGraph.type} />
{
  Astro.props.social.openGraph.article &&
    Astro.props.social.openGraph.article.map((t) => (
      <meta property={`og:article:${t.type}`} content={t.value} />
    ))
}
<meta property="og:locale" content="en-CA" />
<meta property="og:description" content={Astro.props.social.description} />
<meta
  property="og:image:url"
  content={Astro.props.social.openGraph.image.url}
/>
<meta
  property="og:image:secure_url"
  content={Astro.props.social.openGraph.image.secure_url}
/>
<meta
  property="og:image:alt"
  content={Astro.props.social.openGraph.image.alt}
/>
<meta
  property="og:image:type"
  content={Astro.props.social.openGraph.image.type}
/>
{
  Astro.props.social.openGraph.image.width && (
    <meta
      property="og:image:width"
      content={Astro.props.social.openGraph.image.width.toString()}
    />
  )
}
{
  Astro.props.social.openGraph.image.height && (
    <meta
      property="og:image:height"
      content={Astro.props.social.openGraph.image.height.toString()}
    />
  )
}
